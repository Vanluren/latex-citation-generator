{
	"compilerOptions": {
		"outDir": "build/",
		"module": "esnext",
		"target": "es6",
		//"lib": ["es6", "dom"],
		"sourceMap": true,
		"allowJs": true,
		"jsx": "react",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		//"strict": true,
		//"noImplicitReturns": true,
		//"noImplicitThis": true,
		//"noImplicitAny": true,
		//"strictNullChecks": true,
		//"suppressImplicitAnyIndexErrors": true,
		"experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	]
}
